    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.OGRCINSIYET)
        @Html.TextBoxFor(m => m.OGRCINSIYET, new { style = "color:red;border-radius:5px;background-color:#f2f2f2", @class = "form-control" })
    </div>
    @Html.HiddenFor(m => m.OGRENCIID)
    <div style="margin-top:15px">
        <button class="btn">Güncelle</button>
    </div>
}


