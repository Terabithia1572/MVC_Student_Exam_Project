    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.OGRSOYAD)
        @Html.TextBoxFor(m => m.OGRSOYAD, new { style = "color:red;border-radius:5px;background-color:#f2f2f2", @class = "form-control" })
